page{
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}
::-webkit-scrollbar {
  display: none;
}
.item{
  background-color: white;
  width: calc(96% - 70rpx);
  margin:12rpx auto;
  padding: 23rpx 35rpx;
  border: 5rpx solid #eeeeee;
  border-radius: 8rpx;
}
.item-author{
  display: flex;
  color: #9b8878;
}
.item-author-img{
  width: 70rpx;
  height: 70rpx; 
}
.item-author-name{
  line-height: 70rpx;
  font-size: 33rpx;
  margin-left: 23rpx;
  width: 100%;
}
.item-text{
  font-size: 31rpx;
  color: #503e2c;
  margin:23rpx auto;
  line-height: 70rpx;
}
.item-info{
  display: flex;
  font-size: 31rpx;
  color: #9b8878;
}
.item-info-time{
  margin-right: auto;
}
.item-info-delete{
  margin-right: 47rpx;
  color: red;
}
.images{
  margin: 23rpx 0;
  width: 100%;
}
.image{
  height: 200rpx;
  width: 200rpx;
}
.text{
  background-color: white;
  width: calc(96% - 70rpx);
  margin:5px auto 5px auto;
  padding: 23rpx 35rpx;
  font-size: 33rpx;
  color: #503e2c;
  line-height: 70rpx;
  border-radius: 8rpx;
  border: 5rpx solid #eeeeee;
}
.comment-btn{
  height: 82rpx;
  line-height: 82rpx;
  font-size: 35rpx;
  border-radius: 10rpx;
  background-color: #33CC00;
  color: #000000;
  width: fit-content;
  margin-right: 2%;  
}

.help-btn{
  height: 82rpx;
  line-height: 82rpx;
  font-size: 35rpx;
  border-radius: 10rpx;
  background-color: #33CC00;
  color: #000000;
  width: fit-content;
  margin-left: 2%;  
}

.btns{
  background-color: white;
  width: calc(96% - 70rpx);
  margin:0 auto 12rpx auto;
  padding: 23rpx 35rpx;
  font-size: 33rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
}

.text-info{
  height: calc(80rpx);
  background-color: white;
  font-size: 33rpx;
  color: #503e2c;
}