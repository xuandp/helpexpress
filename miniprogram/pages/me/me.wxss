/* pages/me/me.wxss */
page {
  background-color: #ffffff;
}

.user_info {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 300rpx;
  background: #a0deee;
}

.user_image_text {
  width: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.image_radius {
  height: 200rpx;
  width: 200rpx;
  border-radius: 120rpx;
}

.more {
  color: #9b9b9b;
  font-size: 70rpx;
  align-items: center;
  padding-bottom: 5rpx;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}

.icon {
  width: 100rpx;
  height: 100rpx;
}

.content {
  flex-grow: 1;
  font-size: 40rpx;
  height: 100%;
  padding-left: 0rpx;
  padding-top: 30rpx;
  padding-bottom: 35rpx;
}

.banner {
  height: 18rpx;
}


